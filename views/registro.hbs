<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form method="POST" action="/registro/create">
                <h2>Registrar Usuario</h2>
                <div class="row">
                    <div class="col-md-6">
                        <label for="inputNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="inputNombre" name="nombre" />
                        <label class="validacion" id="lblValidacionNombre"></label>
                    </div>
                    <div class="col-md-6">
                        <label for="inputApellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="inputApellido" name="apellido" />
                        <label class="validacion" id="lblValidacionApellido"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="telClase col-6">
                        <label for="inputTelefono" class="form-label">Telefono</label>
                        <input type="tel" class="form-control" id="inputTelefono" name="telefono" />
                        <label class="validacion" id="lblValidacionTelefono"></label>
                    </div>
                    <div class="emailClase col-6">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="text" class="form-control" id="inputEmail" placeholder="example@outloock.com"
                            name="email" />
                        <label class="validacion" id="lblValidacionEmail"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="inputCity" name="city" />
                        <label class="validacion" id="lblValidacionCiudad"></label>
                    </div>
                    <div class="col-md-6">
                        <label for="inputDomicilio" class="form-label">Domicilio</label>
                        <input type="text" class="form-control" id="inputDomicilio" name="domicilio" />
                        <label class="validacion" id="lblValidacionDomicilio"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="passwordClase col-md-12">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="inputPassword" name="password" />
                        <label class="validacion" id="lblValidacionPassword"></label>
                    </div>
                </div>
                <div class="divButtons">
                    <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                    <button type="button" class="btn btn-secondary" id="btnCancelar">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
