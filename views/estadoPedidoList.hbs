<a href="/orderState/create" class="btn btn-primary">Nuevo</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Estado Pedido</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Activo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each estadosPedido}}
        <tr>
            <td scope="row">{{ID}}</td>
            <td>{{EstadoPedido}}</td>
            <td>{{Descripcion}}</td>
            <td>{{Activo}}</td>
            <td>
                <div>
                    <a href="/orderState/view/{{ID}}" class="btn btn-primary">Ver</a>
                    <a href="/orderState/edit/{{ID}}" class="btn btn-warning">Editar</a>
                    <button type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </td>

        </tr>
        {{/each}}

    </tbody>
</table>