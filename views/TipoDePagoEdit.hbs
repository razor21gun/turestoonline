<form class="contenedor-formulario" method="POST" action="/paymentType/new">
    <H2>Nueva Forma de Pago</H2>
    <div class="row">
        <div class="col-md-12">
            <label for="inputFormaDePago" class="form-label">Forma de Pago</label>
            <input type="text" class="form-control" id="inputFormaDePago">
            <label class="validacion"> </label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="activo">
            <label class="form-check-label" for="flexCheckDefault">
                Activo
            </label>
        </div>

    </div>
    <div class=buttom>
        <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
        <button type="button" class="btn btn-secondary">Cancelar</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("#btnGuardar").click(function (event) {
            var formaDePago = $("#inputFormaDePago").val();
            if (!formaDePago) {
                $(".validacion").text("este campo no puede estar vacio");
            } else {
                $(".validacion").text("");
                $("form").submit();
            }

        });
    });
</script>