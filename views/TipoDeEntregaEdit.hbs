<form class="contenedor-formulario" method="POST" action="/deliveryType/new">
    <H2>Nuevo Tipo de Entrega</H2>
    <div class="row">
        <div class="col-md-12">
            <label for="inputFormaDePago" class="form-label">Tipo De Entrega</label>
            <input type="text" class="form-control" id="inputTipoDeEntrega" name="tipoDeEntrega">
            <label class="validacion"> </label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="activo">
            <label class="form-check-label" for="flexCheckDefault">
                Activo
            </label>
        </div>

    </div>
    <div class="divButtons">
        <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
        <button type="button" class="btn btn-secondary">Cancelar</button>
    </div>
</form>
<script>
    $(document).ready(function () {
        $("#btnGuardar").click(function () {
            var tipoDeEntrega = $("#inputTipoDeEntrega").val();
            if (!tipoDeEntrega) {
                $(".validacion").text("este campo no puede estar vacio");
            } else {
                $(".validacion").text("");
                $("form").submit();
            }

        });
    });
</script>