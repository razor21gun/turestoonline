<h1>Categorias</h1>

<a href="/category/create" class="btn btn-primary">Nuevo</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Categoria</th>
            <th scope="col">Activo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
        <tr>
            <td scope="row">{{ID_Categoria}}</td>
            <td>{{Categoria}}</td>
            <td>{{Activo}}</td>
            <td>
                <div>
                    <a href="/category/view/{{ID_Categoria}}" class="btn btn-primary">Ver</a>
                    <a href="/category/edit/{{ID_Categoria}}" class="btn btn-warning">Editar</a>
                    <a href="/category/delete/{{ID_Categoria}}" class="btn btn-danger">Eliminar</a>

                </div>
            </td>

        </tr>
        {{/each}}

    </tbody>
</table>