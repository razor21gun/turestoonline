<div class="Container__Body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <h1>Usuarios</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <a href="/admin/registro" class="btn btn-primary">Nuevo</a>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">UserName</th>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Email</th>
              <th scope="col">Activo</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td scope="row">{{ID_Usuario}}</td>
              <td>{{UserName}}</td>
              <td>{{Nombre}}</td>
              <td>{{Apellido}}</td>
              <td>{{Email}}</td>
              <td>{{Activo}}</td>
              <td>
                <div>
                  <a href="/users/view/{{ID_Usuario}}" class="btn btn-primary">Ver</a>
                  <a href="/users/edit/{{ID_Usuario}}" class="btn btn-warning">Editar</a>
                  <a href="/users/delete/{{ID_Usuario}}" class="btn btn-danger">Eliminar</a>


                </div>
              </td>

            </tr>
            {{/each}}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>