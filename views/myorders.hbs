<h1>Mis Pedidos</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Fecha</th>
            <th scope="col">Direccion de Envio</th>
            <th scope="col">Forma Pago</th>
            <th scope="col">Estado</th>
            <th scope="col">Total</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pedidos}}
        <tr>
            <td scope="row">{{ID_Pedido}}</td>
            <td>{{Fecha}}</td>
            <td>{{DireccionEnvio}}</td>
            <td>{{FormaPago}}</td>
            <td>{{EstadoPedido}}</td>
            <td>{{TotalPedido}}</td>
            <td>
                <div>
                    <a href="/order/view/{{ID_Pedido}}" class="btn btn-primary">Ver</a>
                </div>
            </td>

        </tr>
        {{/each}}

    </tbody>
</table>