  <div class="divButtons">
    <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
    <button type="button" class="btn btn-secondary">Cancelar</button>
  </div>
</form>

<script>
  $(document).ready(function () {
    var estaOk = true;
    $("#btnGuardar").click(function () {
      var nombre = $("#inputNombre").val();
      if (nombre == "") {
        $("#lblValidacionNombre").text("este campo no puede estar vacio");
        estaOk = false;
      } else {
        $("#lblValidacionNombre").text("");
        if (nombre.length > 50) {
          $("#lblValidacionNombre").text("la longitud maxima de este campo es de 50 caracteres");
          estaOk = false;
        } else {
          $("#lblValidacionNombre").text("");
        }
      }


      var apellido = $("#inputApellido").val();
      if (apellido == "") {
        $("#lblValidacionApellido").text("este campo no puede estar vacio");
        estaOk = false;
      } else {
        $("#lblValidacionApellido").text("");
        if (apellido.length > 50) {
          $("#lblValidacionApellido").text("la longitud maxima de este campo es de 50 caracteres");
          estaOk = false;
        } else {
          $("#lblValidacionApellido").text("");
        }
      }


      var telefono = $("#inputTelefono").val();
      if (telefono == "") {
        $("#lblValidacionTelefono").text("este campo no puede estar vacio");
        estaOk = false;
      } else {
        $("#lblValidacionTelefono").text("");
        if (telefono.length > 10) {
          $("#lblValidacionTelefono").text("la longitud maxima de este campo es de 10 caracteres");
          estaOk = false;
        } else {
          $("#lblValidacionTelefono").text("");
        }
      }


      var email = $("#inputEmail").val();
      if (email == "") {
        $("#lblValidacionEmail").text("este campo no puede estar vacio");
        estaOk = false;
      } else {
        $("#lblValidacionEmail").text("");
        if (email.length > 50) {
          $("#lblValidacionEmail").text("la longitud maxima de este campo es de 50 caracteres");
          estaOk = false;
        } else {
          $("#lblValidacionEmail").text("");
        }
      }


      var ciudad = $("#inputCity").val();
      if (ciudad == "") {
        $("#lblValidacionCiudad").text("este campo no puede estar vacio");
        estaOk = false;
      } else {
        $("#lblValidacionCiudad").text("");
        if (ciudad.length > 50) {
          $("#lblValidacionCiudad").text("la longitud maxima de este campo es de 50 caracteres");
          estaOk = false;
        } else {
          $("#lblValidacionCiudad").text("");
        }
      }


      var domicilio = $("#inputDomicilio").val();
      if (domicilio == "") {
        $("#lblValidacionDomicilio").text("este campo no puede estar vacio");
        estaOk = false;
      } else {
        $("#lblValidacionDomicilio").text("");
        if (domicilio.length > 50) {
          $("#lblValidacionDomicilio").text("la longitud maxima de este campo es de 50 caracteres");
          estaOk = false;
        } else {
          $("#lblValidacionDomicilio").text("");
        }
      }
      if (estaOk)
        $("form").submit();


    });
  });
</script>