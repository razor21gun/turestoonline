<form class="contenedor-formulario">
  <H2>Editar Usuario</H2>
  <div class="row">
    <div class="col-md-6">
      <label for="inputNombre" class="form-label">Nombre</label>
      <input type="text" class="form-control" id="inputNombre" value="{{user.Nombre}}">
      <label class="validacion" id="lblValidacionNombre"></label>
    </div>
    <div class="col-md-6">
      <label for="inputApellido" class="form-label">Apellido</label>
      <input type="text" class="form-control" id="inputApellido" value="{{user.Apellido}}">
      <label class="validacion" id="lblValidacionApellido"></label>
    </div>
  </div>
  <div class="row">
    <div class="telClase col-6">
      <label for="inputTelefono" class="form-label">Telefono</label>
      <input type="tel" class="form-control" id="inputTelefono" value="{{user.Telefono}}">
      <label class="validacion" id="lblValidacionTelefono"></label>
    </div>
    <div class="emailClase col-6">
      <label for="inputEmail" class="form-label">Email</label>
      <input type="text" class="form-control" id="inputEmail" placeholder="example@outloock.com" value="{{user.Email}}">
      <label class="validacion" id="lblValidacionEmail"></label>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label for="inputCity" class="form-label">Ciudad</label>
      <input type="text" class="form-control" id="inputCity" value="{{user.Ciudad}}">
      <label class="validacion" id="lblValidacionCiudad"></label>
    </div>
    <div class="col-md-6">
      <label for="inputDomicilio" class="form-label">Domicilio</label>
      <input type="text" class="form-control" id="inputDomicilio" value="{{user.Domicilio}}">
      <label class="validacion" id="lblValidacionDomicilio"></label>
    </div>
  </div>
